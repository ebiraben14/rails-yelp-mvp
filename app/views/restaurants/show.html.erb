<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1><%= @restaurant.name %></h1>

      <ul>
        <li>Address: <strong><%= @restaurant.address %></strong></li>
        <li>Phone: <strong><%= @restaurant.phone_number %></strong></li>
        <li>Category: <strong><%= @restaurant.category %></strong></li>
      </ul>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content =%> <%= review.rating =%></li>
        <% end %>
      </ul>



      <%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure to remove #{@restaurant.name}? ðŸ˜¢" }, class: 'btn btn-outline-danger mt-3' %>
      <%= link_to "back to Restaurants", restaurants_path, class: 'btn btn-primary mt-3'%>
      <%= link_to "Leave a Review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-3'%>
    </div>
  </div>
</div>
