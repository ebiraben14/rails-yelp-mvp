<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>All Restaurants</h1>

      <ul>
        <% @restaurants.each do |resto| %>
          <li><%= link_to resto.name, restaurant_path(resto)%></li>
        <% end %>
        <%= link_to "Add a Restaurants",  new_restaurant_path, class: 'btn btn-primary mt-3'%>
      </ul>
    </div>
  </div>
</div>
