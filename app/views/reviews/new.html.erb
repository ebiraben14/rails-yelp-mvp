<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Add a new Review</h1>

      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.select :rating, collection: Review::NOTES %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
